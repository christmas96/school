{
  "buildOnSave": true,
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es7"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/",
    "paths": {
      "*": ["src/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "files": [
    "./src/global.d.ts"
  ],
  "exclude": ["build", "node_modules"],
  "include": ["src/**/*"]
}
